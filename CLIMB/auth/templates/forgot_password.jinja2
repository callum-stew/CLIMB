{% extends 'layout.jinja2' %}

{% block head %}
    <link href="{{ url_for('auth_bp.static', filename='css/forgot_password.css') }}" rel="stylesheet">
{% endblock %}


{% block body_tag %}class="text-center"{% endblock %}
{% block body %}
    <main class="form-email">
        <form method="post">
            <img class="mb-4" src="../static/CLIMB-logo-black.svg" alt="" width="72" height="57">
            <h1 class="display-3">CLIMB</h1>
            <hr/>
            {% include 'alert.jinja2' %}
            <h1 class="h3 mb-3 fw-normal">Please enter email</h1>
            <label for="inputEmail" class="visually-hidden">Email address</label>
            <input type="email" id="inputEmail" class="form-control" placeholder="Email address" name="email" required autofocus>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Send password</button>
        </form>
    </main>

    {% include 'footer.jinja2' %}
{% endblock %}