{% extends 'layout.jinja2' %}

{% block head %}
    <link href="{{ url_for('auth_bp.static', filename='css/change_password.css') }}" rel="stylesheet">
{% endblock %}


{% block body_tag %}class="text-center"{% endblock %}
{% block body %}
    <main class="form-password">
        <form method="post">
            <img class="mb-4" src="../static/CLIMB-logo-black.svg" alt="" width="72" height="57">
            <h1 class="display-3">CLIMB</h1>
            <hr/>
            {% include 'alert.jinja2' %}
            <h1 class="h3 mb-3 fw-normal">Please enter new password</h1>
            <label for="inputPassword" class="visually-hidden">Password</label>
            <input type="password" id="inputPassword" class="form-control pass" placeholder="Password" name="password" required autofocus>
            <label for="inputRepeatPassword" class="visually-hidden">Repeat password</label>
            <input type="password" id="inputRepeatPassword" class="form-control reppass" placeholder="Repeat Password" name="repeatPassword" required>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Save</button>
        </form>
    </main>

    {% include 'footer.jinja2' %}
{% endblock %}